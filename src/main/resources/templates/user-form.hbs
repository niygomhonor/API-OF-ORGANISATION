{{#partial "content"}}
    <div class="whole-page">
        <a href="/"><i class="fas fa-arrow-left"></i></a>
        <h2 class="text-center users-hd">Users</h2>
        <hr>
        <i class="fas fa-plus for-user" data-toggle="modal" data-target="#basicExampleModal"> Add Employee</i>
<!--        <div class="modal fade right" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">-->
            <div class="modal-dialog modal-side modal-top-right" role="document">
                <form action="/users" method="post">
                    <div class="modal-dialog cascading-modal" role="document">

                        <div class="modal-content">
                            <div class="modal-header primary-color white-text">
                                <h4 class="title">
                                    <i class="fas fa-user"></i> Employee Info</h4>
                            </div>

                            <div class="modal-body">
                                <div class="md-form form-sm">
                                    <i class="fas fa-user">  Name of Employee</i>
                                    <input type="text" name="name" class="form-control form-control-sm" placeholder="Employee's name" required>
                                </div>

                                <div class="md-form form-sm">
                                    <i class="fas fa-briefcase">Employee Position</i>
                                    <input type="text" name="userPosition" class="form-control form-control-sm" placeholder="e.g. CEO" required>
                                </div>

                                <div class="md-form form-sm">
                                    <i class="fas fa-briefcase">Employee Role</i>
                                    <input type="text" name="role" class="form-control form-control-sm" placeholder="" required>
                                </div>
                                <div class="text-center mt-4 mb-2">
                                    <button class="btn btn-outline-primary" type="submit">Add
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
<!--    </div>-->
{{/partial}}
{{> layout.hbs}}