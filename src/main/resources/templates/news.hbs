{{#partial "content"}}
<div class="news">
    <div class="container-fluid">
        <div class="row">
            {{#if allNews}}
                {{#each allNews}}
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-body body-1">
                            </div>
                            <h3 class="card-title text-center">{{header}}</h3>
                            <div class="card-body body-2">
                                <p class="card-text text-center"><strong>{{contents}}</strong></p>
                            </div>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <p class="text-center else">No new available</p>
            {{/if}}

        </div>
    </div>
</div>
</div>

{{/partial}}
{{> layout.hbs}}